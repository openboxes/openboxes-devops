upstream tomcat {
    server 127.0.0.1:8080 weight=100 max_fails=5 fail_timeout=5;
}

server {
    access_log /var/log/nginx/tomcat-access.log;
    add_header Strict-Transport-Security "max-age=63072000" always;

    client_max_body_size 384M;  # enable large uploads to tomcat manager

    error_log /var/log/nginx/tomcat-error.log;

    # dynamically gzip non-image data (OBS-1396)
    gzip on;
    gzip_comp_level 1;
    gzip_disable "msie6";
    gzip_min_length 512;
    gzip_proxied any;
    gzip_vary on;
    gzip_types
      application/javascript
      application/x-javascript
      application/json
      application/rdf+xml
      application/rss+xml
      application/xhtml+xml
      application/xml
      font/eot
      font/otf
      font/ttf
      image/svg+xml
      text/css
      text/javascript
      text/plain
      text/xml;

    # default timeout of 1 minute can return 504's when reports are slow (OBS-1396)
    proxy_connect_timeout 360;
    proxy_read_timeout 360;
    proxy_send_timeout 360;

    resolver 1.1.1.1;
    server_name {{ ansible_fqdn }};

    #
    # We only set a few ssl_* parameters; for all others, defer to
    # Certbot, which modifies this file after Ansible installs it.
    #
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate /etc/nginx/certs/lets-encrypt-x3-cross-signed.pem;

    location /images {
        root /etc/nginx/static;
    }

    location / {
        proxy_pass http://tomcat/;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
    }
}
